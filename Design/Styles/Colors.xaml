<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Application color palette -->
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="LightGrayColor">#d8d8d8</Color>
    <Color x:Key="MediumGrayColor">#808080</Color>
    <Color x:Key="DarkGrayColor">#8c8c8c</Color>
    <Color x:Key="BlackColor">#000000</Color>

    <Color x:Key="LightBlueColor">#4da6ff</Color>
    <Color x:Key="MediumBlueColor">#0080ff</Color>
    <Color x:Key="DarkBlueColor">#005ab3</Color>

    <!-- Application color brushes -->
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}" />
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGrayColor}" />
    <SolidColorBrush x:Key="MediumGrayBrush" Color="{StaticResource MediumGrayColor}" />
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGrayColor}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource BlackColor}" />

    <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlueColor}" />
    <SolidColorBrush x:Key="MediumBlueBrush" Color="{StaticResource MediumBlueColor}" />
    <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlueColor}" />
</ResourceDictionary>